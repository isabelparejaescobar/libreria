extends ../layout/index

block contenido
    .row.justify-content-center.mt-5
        .col-md-6
            h2.text-center.mb-4 #{pagina}

            if errores
                each error in errores
                    .alert.alert-danger.text-center= error.msg

            .card.shadow
                .card-body
                    form(action="/auth/registro" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre.form-control(type="text" placeholder="Tu Nombre" name="nombre" value= usuario ? usuario.nombre : '')
                        .form-group
                            label(for="email") Email
                            input#email.form-control(type="email" placeholder="Tu Email" name="email" value= usuario ? usuario.email : '')
                        .form-group
                            label(for="password") Contraseña
                            input#password.form-control(type="password" placeholder="Tu Password" name="password")

                        input.btn.btn-primary.btn-block(type="submit" value="Crear Cuenta")

                    .text-center.mt-3
                        a(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión