header.header
    .navbar
        .container-fluid.px-5
            .row.w-100.align-items-center
                // 1. LOGO (Izquierda)
                .col-md-2.d-flex.align-items-center
                    a.logo(href="/")
                        img(src="/img/logo.png", alt="Logo", style="max-height: 50px;")

                // 2. MENÚ (Centro) - Ahora tiene su propia clase para separar
                .col-md-5.d-none.d-md-flex.justify-content-center
                    nav.navigation-menu
                        a.nav-link(href="/resenias") Reseñas
                        a.nav-link(href="/ofertas") Ofertas
                        a.nav-link(href="/contacto") Contacto

                // 3. BUSCADOR Y BOTONES (Derecha)
                .col-md-5.col-12
                    .actions-panel
                        // Bloque del Buscador
                        form.search-form(action="/buscar", method="GET")
                            .input-group
                                input.form-control.search-input(type="text", name="q", placeholder="Buscar libro...")
                                button.btn.btn-search(type="submit")
                                    i.bi.bi-search

                        // Bloque de Autenticación (Separado del buscador)
                        .auth-block
                            if usuarioLogueado
                                span.user-name Hola, #{usuarioLogueado.nombre}
                                a.btn.btn-salir(href="/auth/logout") Salir
                            else
                                a.btn.btn-login(href="/auth/login") Iniciar Sesión
                                a.btn.btn-crear(href="/auth/registro") Crear Cuenta

                        // Botón móvil
                        button.menu-toggle.d-md-none(type="button")
                            span
                            span
                            span